{
  "name": "slims",
  "version": "0.5.0",
  "description": "Vanilla CSS framework",
  "license": "MIT",
  "repository": "gitscrum/slims",
  "homepage": "gitscrum/slims#readme",
  "bugs": "gitscrum/slims/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "dist/css/slims.min.css",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "commitmsg": "conventional-changelog-lint -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"chore(changelog): Update changelog v`npm view post-config version`\"",
    "lintcss": "stylelint src/**/*.css",
    "lintjs": "eslint ./*.js",
    "lintmd": "eslint --ext md --rule indent: [error, 4] .",
    "pretest": "clinton && npm run lintjs && npm run lintmd && npm run lintcss",
    "test": "gulp test",
    "clean": "rm -rf dist && mkdir dist",
    "css": "postcss -o dist/css/slims.min.css src/css/slims.css -c postcss.json",
    "build": "npm run clean && npm run css",
    "deploy": "gulp deploy",
    "update": "updtr"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "CSS",
    "Framework"
  ],
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-preset-env": "^1.1.7",
    "babel-register": "^6.18.0",
    "clinton": "^0.10.0",
    "conventional-changelog-cli": "^1.2.0",
    "conventional-changelog-lint": "^1.1.0",
    "doiuse": "^2.5.0",
    "eslint": "^3.13.1",
    "eslint-config-xo": "^0.17.0",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-ava": "^4.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-markdown": "^1.0.0-beta.3",
    "eslint-plugin-require-path-exists": "^1.1.5",
    "eslint-plugin-xo": "^1.0.0",
    "execa": "^0.6.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-cli": "^1.2.2",
    "gulp-gh-pages": "^0.5.4",
    "gulp-postcss": "^6.2.0",
    "husky": "^0.12.0",
    "postcss-at-rules-variables": "0.0.26",
    "postcss-attribute-selector-prefix": "0.0.12",
    "postcss-calc": "^5.3.1",
    "postcss-class-prefix": "^0.3.0",
    "postcss-clearfix": "^1.0.0",
    "postcss-cli": "^2.6.0",
    "postcss-conditionals": "^2.1.0",
    "postcss-csso": "^1.1.2",
    "postcss-custom-properties": "^5.0.1",
    "postcss-devtools": "^1.1.1",
    "postcss-each": "^0.9.3",
    "postcss-easy-import": "^1.0.1",
    "postcss-for": "^2.1.1",
    "postcss-initial": "^1.5.3",
    "postcss-mixins": "^5.4.1",
    "postcss-nested": "^1.0.0",
    "postcss-sorting": "^1.7.0",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    "updtr": "^0.2.3"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "format": "node_modules/eslint-formatter-pretty",
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "xo",
      "babel",
      "require-path-exists",
      "markdown"
    ],
    "extends": [
      "xo",
      "plugin:xo/recommended",
      "plugin:ava/recommended"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ],
      "ava": [
        "off"
      ]
    }
  }
}
