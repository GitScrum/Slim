{
  "name": "slims",
  "version": "1.0.0",
  "description": "Vanilla CSS framework",
  "license": "MIT",
  "repository": "scrum/slims",
  "homepage": "https://scrum/slims#readme",
  "bugs": "scrum/slims/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "dist/css/slims.min.css",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "precommit": "clinton && lint-staged",
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "prepublish": "npm run build",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"chore(changelog): Update changelog\"",
    "test": "npm run test:e2e",
    "test:e2e": "npm run build && npm run testcafe",
    "testcafe": "testcafe all tests/e2e/*-test.js --app \"http-server ./ -s\"",
    "html": "node src/build/html.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "css": "postcss --no-map -o dist/css/slims.min.css src/css/slims.css && cp -a dist/. docs/",
    "build": "rimraf dist && npm run css && npm run html",
    "watch:docs": "chokidar src/docs/**/* -c \"npm run html\"",
    "watch:css": "chokidar src/css/**/* -c \"npm run css\"",
    "watch": "npm run watch:docs | npm run watch:css",
    "server": "browser-sync start --server docs --files docs",
    "dev": " npm run server | npm run watch"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "CSS",
    "Vanilla",
    "Framework"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.0.0",
    "autoprefixer": "^9.6.0",
    "babel-eslint": "^10.0.2",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^1.2.2",
    "clinton": "^0.14.0",
    "conventional-changelog-cli": "^2.0.21",
    "eslint": "^6.0.1",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-ava": "^7.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-xo": "^1.0.0",
    "http-server": "^0.11.1",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.2",
    "postcss-at-rules-variables": "0.1.8",
    "postcss-calc": "^7.0.1",
    "postcss-cli": "^6.1.2",
    "postcss-conditionals": "^3.0.0-beta.0",
    "postcss-csso": "^3.0.0",
    "postcss-custom-properties": "^9.0.1",
    "postcss-devtools": "^1.1.1",
    "postcss-each": "^0.10.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-flow-root": "0.0.3",
    "postcss-for": "^2.1.1",
    "postcss-initial": "^3.0.0",
    "postcss-mixins": "^6.2.1",
    "postcss-nested": "^4.1.2",
    "postcss-reduce-initial": "^4.0.3",
    "postcss-sorting": "^5.0.0",
    "posthtml": "^0.11.4",
    "posthtml-cli": "0.5.1",
    "posthtml-extend": "^0.3.0",
    "posthtml-modules": "^0.4.2",
    "posthtml-spaceless": "^0.0.3",
    "rimraf": "^2.6.3",
    "stylefmt": "^6.0.3",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-csstree-validator": "^1.4.0",
    "testcafe": "^1.3.0"
  },
  "lint-staged": {
    "*.{js,html}": "eslint",
    "*.md": "eslint",
    "src/**/*.css": "stylelint"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "posthtml": {
    "extend": {
      "root": "src/docs/"
    },
    "modules": {
      "root": "src/docs/",
      "from": "src/docs/layout/"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-devtools": {},
      "stylefmt": {},
      "postcss-easy-import": {
        "prefix": "_",
        "extensions": ".css"
      },
      "postcss-each": {},
      "postcss-mixins": {},
      "postcss-at-rules-variables": {},
      "postcss-for": {},
      "postcss-custom-properties": {
        "preserve": false
      },
      "postcss-conditionals": {},
      "postcss-nested": {},
      "postcss-calc": {
        "precision": 6
      },
      "postcss-flow-root": {},
      "postcss-initial": {},
      "postcss-reduce-initial": {},
      "autoprefixer": {},
      "postcss-sorting": {},
      "postcss-csso": {}
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "xo",
      "babel",
      "markdown",
      "html"
    ],
    "extends": [
      "xo",
      "plugin:xo/recommended",
      "plugin:ava/recommended"
    ],
    "globals": {
      "hljs": true,
      "test": true,
      "fixture": true
    },
    "rules": {
      "no-unused-expressions": [
        0,
        {
          "allowShortCircuit": true
        }
      ]
    }
  },
  "stylelint": {
    "rules": {
      "function-whitespace-after": null,
      "at-rule-no-unknown": null
    },
    "plugins": [
      "stylelint-csstree-validator"
    ],
    "extends": "stylelint-config-standard"
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ],
      "ava": [
        "off"
      ]
    }
  }
}
