{
  "name": "slims",
  "version": "0.5.2",
  "description": "Vanilla CSS framework",
  "license": "MIT",
  "repository": "gitscrum/slims",
  "homepage": "gitscrum/slims#readme",
  "bugs": "gitscrum/slims/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "dist/css/slims.min.css",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "commitmsg": "conventional-changelog-lint -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"chore(changelog): Update changelog",
    "patch": "np patch --any-branch",
    "minor": "np minor --any-branch",
    "major": "np major --any-branch",
    "lintcss": "stylelint src/**/*.css",
    "lintjs": "eslint ./*.js",
    "linthtml": "eslint **/*.html",
    "lintmd": "eslint --ext md --rule indent: [error, 4] .",
    "pretest": "clinton && npm run lintjs && npm run lintmd && npm run linthtml",
    "test": " npm run lintcss && npm run test:e2e",
    "test:e2e": "npm run build && npm run testcafe",
    "testcafe": "testcafe all tests/e2e/*-test.js --app \"http-server ./ -s\"",
    "html": "node src/build/html.js",
    "css": "postcss --no-map -o dist/css/slims.min.css src/css/slims.css && cp -a dist/. docs/",
    "build": "rimraf dist && npm run css && npm run html",
    "watch:docs": "chokidar src/docs/**/* -c \"npm run html\"",
    "watch:css": "chokidar src/css/**/* -c \"npm run css\"",
    "watch": "npm run watch:docs | npm run watch:css",
    "server": "browser-sync start --server docs --files docs",
    "dev": " npm run server | npm run watch",
    "prepublish": "npm run build",
    "update": "updtr"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "CSS",
    "Framework"
  ],
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-eslint": "^7.2.3",
    "browser-sync": "^2.18.12",
    "chokidar-cli": "^1.2.0",
    "clinton": "^0.13.0",
    "conventional-changelog-cli": "^1.3.1",
    "conventional-changelog-lint": "^1.1.9",
    "eslint": "^3.19.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-html": "^2.0.3",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-xo": "^1.0.0",
    "http-server": "^0.10.0",
    "husky": "^0.13.4",
    "np": "^2.15.0",
    "postcss-at-rules-variables": "0.1.1",
    "postcss-attribute-selector-prefix": "0.1.0",
    "postcss-calc": "^6.0.0",
    "postcss-class-prefix": "^0.3.0",
    "postcss-cli": "^4.0.0",
    "postcss-conditionals": "^2.1.0",
    "postcss-csso": "^2.0.0",
    "postcss-custom-properties": "^6.0.1",
    "postcss-devtools": "^1.1.1",
    "postcss-each": "^0.10.0",
    "postcss-easy-import": "^2.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-flow-root": "0.0.2",
    "postcss-for": "^2.1.1",
    "postcss-initial": "^2.0.0",
    "postcss-mixins": "^6.0.0",
    "postcss-nested": "^2.0.2",
    "postcss-reduce-initial": "^1.0.1",
    "postcss-sorting": "^2.1.0",
    "posthtml": "^0.9.2",
    "posthtml-cli": "0.3.0",
    "posthtml-extend": "^0.1.2",
    "posthtml-modules": "^0.4.2",
    "posthtml-spaceless": "^0.0.2",
    "rimraf": "^2.6.1",
    "stylefmt": "^6.0.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-csstree-validator": "^1.1.1",
    "testcafe": "^0.16.0-alpha4",
    "updtr": "^1.0.0"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "posthtml": {
    "extend": {
      "root": "src/docs/"
    },
    "modules": {
      "root": "src/docs/",
      "from": "src/docs/layout/"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-devtools": {},
      "stylefmt": {},
      "postcss-easy-import": {
        "prefix": "_",
        "extensions": ".css"
      },
      "postcss-each": {},
      "postcss-mixins": {},
      "postcss-at-rules-variables": {},
      "postcss-custom-properties": {},
      "postcss-for": {},
      "postcss-conditionals": {},
      "postcss-nested": {},
      "postcss-calc": {
        "precision": 6
      },
      "postcss-flow-root": {},
      "postcss-initial": {},
      "postcss-class-prefix": "sl-",
      "postcss-attribute-selector-prefix": {
        "prefix": "sl-",
        "filter": [
          "class"
        ]
      },
      "postcss-reduce-initial": {},
      "autoprefixer": {},
      "postcss-sorting": {},
      "postcss-csso": {}
    }
  },
  "eslintConfig": {
    "format": "node_modules/eslint-formatter-pretty",
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "xo",
      "babel",
      "markdown",
      "html"
    ],
    "extends": [
      "xo",
      "plugin:xo/recommended",
      "plugin:ava/recommended"
    ],
    "globals": {
      "hljs": true
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-csstree-validator"
    ],
    "extends": "stylelint-config-standard"
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ],
      "ava": [
        "off"
      ]
    }
  }
}
